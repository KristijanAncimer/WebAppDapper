@model IEnumerable<WebAppDapper.Models.Stroj>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.naziv_stroja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.naziv_stroja)
            </td>
            <td>
                    <a asp-controller="Stroj" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-outline-info btn-sm">Update</a> &emsp;
                    <a asp-controller="Stroj" asp-action="GetById" asp-route-Id="@item.Id" class="btn btn-outline-info btn-sm">Informacije kvarova</a> &emsp;
                    <form asp-controller="Stroj" asp-action="Delete" asp-route-Id="@item.Id" onclick="confirm('Jeste li sigurni da zelite izbrisati stroj @item.naziv_stroja')">
                        <button class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
            </td>
        </tr>
}
    </tbody>
</table>
